<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:background="@color/common_action_bar" android:layout_height="60dp" android:layout_width="match_parent" android:orientation="horizontal" android:paddingLeft="@dimen/common_margin" android:paddingRight="@dimen/common_margin">

    <LinearLayout android:layout_height="match_parent" android:layout_weight="1" android:layout_width="0dp" android:orientation="horizontal">

        <ImageView android:id="@+id/coin_img" android:layout_gravity="center_vertical" android:layout_height="25dp" android:layout_width="25dp"/>

        <TextView android:gravity="center" android:id="@+id/coin_name" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_width="wrap_content" android:textColor="@color/common_text" android:textSize="16sp" tools:text="BTC"/>

        <TextView android:gravity="center" android:id="@+id/coin_unit" android:layout_height="match_parent" android:layout_width="wrap_content" android:text="/USDT" android:textColor="@color/common_hint" android:textSize="12sp"/>
    </LinearLayout>


    <TextView android:gravity="center_vertical" android:id="@+id/coin_price" android:layout_height="match_parent" android:layout_weight="1" android:layout_width="0dp" android:textColor="@color/common_text" android:textSize="16sp" tools:text="8265.22"/>

    <LinearLayout android:gravity="right|center_vertical" android:layout_height="match_parent" android:layout_weight="1" android:layout_width="0dp" android:orientation="horizontal">

        <TextView android:background="@drawable/market_green_bg" android:gravity="center" android:id="@+id/coin_change_rate" android:layout_height="30dp" android:layout_width="wrap_content" android:minWidth="70dp" android:text="+1.11%" android:textColor="@color/common_white"/>

    </LinearLayout>

</LinearLayout>
