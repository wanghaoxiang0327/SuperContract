<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#1C1F22" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:padding="15dp">

    <LinearLayout android:gravity="center_vertical" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal">

        <TextView android:layout_height="wrap_content" android:layout_marginEnd="20dp" android:layout_width="wrap_content" android:text="@string/market_pop_kchart_main" android:textColor="@color/common_white" android:textSize="13dp"/>

        <View android:background="@color/common_hint" android:layout_height="16dp" android:layout_marginEnd="20dp" android:layout_width="1dp"/>

        <TextView android:id="@+id/tvMa" android:layout_height="wrap_content" android:layout_width="65dp" android:text="MA" android:textColor="@color/common_hint" android:textSize="13dp"/>

        <TextView android:id="@+id/tvBoll" android:layout_height="wrap_content" android:layout_marginEnd="22dp" android:layout_width="wrap_content" android:text="BOLL" android:textColor="@color/common_hint" android:textSize="13dp"/>

        <View android:layout_height="1dp" android:layout_weight="1" android:layout_width="0dp"/>

        <ImageView android:id="@+id/ivUpToggle" android:layout_height="16dp" android:layout_width="16dp"/>
    </LinearLayout>

    <LinearLayout android:gravity="center_vertical" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:layout_width="match_parent" android:orientation="horizontal">

        <TextView android:layout_height="wrap_content" android:layout_marginEnd="20dp" android:layout_width="wrap_content" android:text="@string/market_pop_kchart_fu" android:textColor="@color/common_white" android:textSize="13dp"/>

        <View android:background="@color/common_hint" android:layout_height="17dp" android:layout_marginEnd="20dp" android:layout_width="1dp"/>

        <TextView android:id="@+id/tvMacd" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="0dp" android:text="MACD" android:textColor="@color/common_hint" android:textSize="13dp"/>

        <TextView android:id="@+id/tvKdj" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="0dp" android:text="KDJ" android:textColor="@color/common_hint" android:textSize="13dp"/>

        <TextView android:id="@+id/tvRsi" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="0dp" android:text="RSI" android:textColor="@color/common_hint" android:textSize="13dp"/>

        <TextView android:id="@+id/tvWr" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="0dp" android:text="WR" android:textColor="@color/common_hint" android:textSize="13dp"/>


        <ImageView android:id="@+id/ivDownToggle" android:layout_height="16dp" android:layout_width="16dp"/>
    </LinearLayout>

</LinearLayout>
