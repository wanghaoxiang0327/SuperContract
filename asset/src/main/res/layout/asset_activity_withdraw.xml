<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_dark"
    android:orientation="vertical">

    <com.sskj.common.view.ToolBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:background_color="@color/common_action_bar"
        app:right_img="@mipmap/asset_icon_history"
        app:title="提币" />


    <com.allen.library.SuperTextView
        android:id="@+id/select_coin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        app:sBackgroundDrawableRes="@color/common_background"
        app:sDividerLineColor="@color/common_divider"
        app:sDividerLineType="top"
        app:sLeftTextColor="@color/common_text"
        app:sLeftTextString="选择币种"
        app:sLeftViewMarginLeft="0dp"
        app:sRightTextColor="@color/common_text"
        app:sRightTvDrawableRight="@mipmap/common_arrow_right" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@color/common_background"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_margin"
        android:text="可用"
        android:textColor="@color/common_hint" />


    <TextView
        android:id="@+id/useful_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/common_edt_line_bg"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:text="0.0000BTC"
        android:textColor="@color/common_text"
        android:textColorHint="@color/common_text"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/common_background"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_margin"
        android:text="提币地址"
        android:textColor="@color/common_hint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/common_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin">


        <EditText
            android:id="@+id/address_edt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="10dp"
            android:hint="输入或长按粘贴地址"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/common_text"
            android:textColorHint="@color/common_text"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/select_address"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/asset_icon_list" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@color/common_background"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_margin"
        android:text="数量"
        android:textColor="@color/common_hint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/common_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin">


        <EditText
            android:id="@+id/count_edt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="10dp"
            android:hint="最小提币数量200"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/common_text"
            android:textColorHint="@color/common_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/coin_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="BTC"
            android:textColor="@color/common_text" />

        <TextView
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="全部"
            android:textColor="@color/common_tip" />

    </LinearLayout>

    <TextView
        android:id="@+id/fee_tv"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:text="手续费：5.5550 BTC/次"
        android:textColor="@color/common_hint"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/arrive_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginTop="50dp"
        android:layout_marginRight="@dimen/common_margin"
        android:text="到账数量：---"
        android:textColor="@color/common_text"
        android:textSize="17sp" />


    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginTop="30dp"
        android:layout_marginRight="@dimen/common_margin"
        android:background="@drawable/common_tip_50"
        android:text="提币"
        android:textColor="@color/common_white" />

</LinearLayout>