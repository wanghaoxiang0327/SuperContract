<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_background"
    android:paddingTop="@dimen/common_margin"
    >

    <ImageView
        android:id="@+id/coin_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:src="@mipmap/common_icon_btc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/common_text"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/coin_icon"
        app:layout_constraintStart_toEndOf="@+id/coin_icon"
        app:layout_constraintTop_toTopOf="@+id/coin_icon"
        tools:text="BTC" />


    <TextView
        android:id="@+id/asset_textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="可用"
        android:textColor="@color/common_hint"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/coin_name"
        app:layout_constraintTop_toBottomOf="@+id/coin_name" />

    <TextView
        android:id="@+id/asset_frost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/common_text"
        android:textSize="13sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/asset_textview5"
        app:layout_constraintStart_toEndOf="@+id/asset_textview5"
        tools:text="0.0031" />


    <TextView
        android:id="@+id/asset_textview5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="冻结"
        android:textColor="@color/common_hint"
        android:textSize="13sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/asset_useful"
        app:layout_constraintStart_toEndOf="@+id/asset_barrier" />

    <TextView
        android:id="@+id/asset_useful"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/common_text"
        android:textSize="13sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/asset_textview3"
        app:layout_constraintStart_toEndOf="@+id/asset_textview3"
        tools:text="0.0031" />


    <TextView
        android:id="@+id/recharge"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@mipmap/asset_recharge"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="充币"
        android:textColor="#0ce9c7"
        app:layout_constraintStart_toStartOf="@+id/asset_textview3"
        app:layout_constraintTop_toBottomOf="@+id/asset_textview3" />

    <TextView
        android:id="@+id/cashOut"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:drawableLeft="@mipmap/asset_cashout"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="提币"
        android:textColor="#ff6960"
        app:layout_constraintBaseline_toBaselineOf="@+id/recharge"
        app:layout_constraintEnd_toStartOf="@+id/asset_guideline2"
        app:layout_constraintStart_toStartOf="@+id/asset_guideline" />

    <TextView
        android:id="@+id/transfer"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:drawableLeft="@mipmap/asset_transfer"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="转账"
        android:textColor="#f7931a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/asset_guideline2"
        app:layout_constraintTop_toBottomOf="@+id/asset_textview3" />

    <android.support.constraint.Guideline
        android:id="@+id/asset_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <android.support.constraint.Guideline
        android:id="@+id/asset_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />

    <android.support.constraint.Guideline
        android:id="@+id/asset_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/common_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recharge" />
</android.support.constraint.ConstraintLayout>