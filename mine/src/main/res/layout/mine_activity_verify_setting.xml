<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_background"
    android:orientation="vertical">


    <com.sskj.common.view.ToolBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:background_color="@color/common_action_bar"
        app:title="短信验证" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/common_action_bar"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin">

        <TextView
            android:id="@+id/verify_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="手机号码"
            android:textColor="@color/common_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/verify_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/common_text"
            android:textSize="16sp"
            tools:text="187*111" />

        <TextView
            android:id="@+id/verify_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="未绑定"
            android:textColor="@color/common_hint" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_action_bar"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin">

        <com.sskj.common.view.CheckButton
            android:id="@+id/verify_check"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@drawable/mine_switch"
            android:layoutDirection="rtl"
            android:text="短信验证"
            android:textColor="@color/common_text"
            />
    </LinearLayout>

</LinearLayout>